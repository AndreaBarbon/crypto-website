<p id="notice"><%= notice %></p>

<h1>Open Positions</h1>

<p>Average Return: <%= (@avg_ret * 100).round(2) %>%</p>

<table>
  <thead>
    <tr>
      <th>Ticker</th>
      <th>Exchange</th>
      <th>Date buy</th>
      <th>Amount</th>
      <th>Price buy</th>
      <th>Price</th>
      <th>Return BTC</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |pos| %>
      <tr>
        <td><%= link_to pos.ticker, pos.crypto_compare_link %></td>
        <td><%= pos.exchange %></td>
        <td><%= pos.date_buy %></td>
        <td><%= pos.amount.round(2) %></td>
        <td><%= pos.price_buy.round(8) %></td>
        <td><%= pos.price.round(8) %></td>
        <td><%= (pos.ret_BTC*100).round(2) %>%</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>