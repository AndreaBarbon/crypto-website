<p id="notice"><%= notice %></p>

<h1>Open Positions</h1>

<table>
  <thead>
    <tr>
      <th>Ticker</th>
      <th>Exchange</th>
      <th>Date buy</th>
      <th>Amount</th>
      <th>Price buy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trades.each do |trade| %>
      <tr>
        <td><%= link_to trade.ticker, trade.crypto_compare_link %></td>
        <td><%= trade.exchange %></td>
        <td><%= trade.date_buy %></td>
        <td><%= trade.amount.round(2) %></td>
        <td><%= trade.price_buy.round(8) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>